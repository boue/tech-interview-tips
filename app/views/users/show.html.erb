    <h1><%= @user.name %></h1>
    <hr>
    <h3>Interview Prep</h3>
  <p>Click the <i class="fa fa-floppy-o"></i> icon next to a question so that it will appear here for future reference.</p>
    <% if current_user.id == @user.id %>
      <% @user.favorites.each do |favorite| %>
      <div class="row">
        <div class="small-12 large-12 columns">
        <hr>
          <%= link_to favorite.favoritable.title, question_path(favorite.favoritable) %><br>
        </div>
      </div>
      <% end %>
    <% end %>

