<% content_for :title do %>Update Question<% end %>
<style>
  h1 {
    margin-top: 0;
    padding-top: 0;
    font-family: 'Candal', sans-serif;
  }
</style>
<div class="row">
  <div class="small-12 large-12 columns panel">
    <h1>Update Question</h1>
     <%= form_for @question do |f| %>
     <div class="row">
       <div class="small-12 large-12 columns">
          <%= f.text_area :title, size: "60x12" %>
        </div>
      </div>
       <div class="row">
         <div class="small-12 large-12 columns">
          <%= f.text_field :tag_list %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 large-12 columns">
          <%= f.submit "Update Question", class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>